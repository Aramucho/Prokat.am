<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolorwhite">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/section_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="@string/section"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/section_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:minHeight="40dp"


                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/subsection_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/section_layout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subsection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="@string/subsection"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/subsection_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:minHeight="40dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cities_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/subsection_layout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="@string/city"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/cities_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:minHeight="40dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/goods_name_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/cities_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="Անվանում"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/goods_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_drawable"
                    android:textColor="#000000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/goods_name_layout"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/description"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/description_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_drawable"
                    android:minLines="4"
                    android:textColor="#000000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/description_layout"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="@string/price"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/price_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_drawable"
                    android:textColor="#000000"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_period_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/price_layout"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/time_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:text="@string/time_period"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/hour"
                        android:textColor="#000000"
                        android:theme="@style/RadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day"
                        android:textColor="#000000"
                        android:theme="@style/RadioButtonTheme" />

                    <RadioButton
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month"
                        android:textColor="#000000"
                        android:theme="@style/RadioButtonTheme" />

                </RadioGroup>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/photos_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/time_period_layout"

                >

                <TextView
                    android:id="@+id/photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:minHeight="40dp"
                    android:text="@string/photos_title"
                    android:textColor="#000000"
                    android:textSize="20sp"


                    />
                <LinearLayout
                    android:id="@+id/photo_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/photos"
                    >

                    <TextView
                        android:id="@+id/number_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_1"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/number_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_2"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/number_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_3"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/number_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_4"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/number_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_5"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                </LinearLayout>


                    <LinearLayout
                        android:id="@+id/photo_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/photos"
                        android:layout_toEndOf="@id/photo_numbers"
                        android:layout_marginLeft="8dp"
                        >

                        <Button
                            android:id="@+id/photo_1"
                            android:layout_width="40dp"
                            android:layout_height="24dp"
                            android:background="#55606060"
                            android:text="@string/photo_button"
                            />

                        <Button
                            android:id="@+id/photo_2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="#55606060"
                            android:text="@string/photo_button"

                            android:layout_marginTop="5dp"/>

                        <Button
                            android:id="@+id/photo_3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="#55606060"
                            android:text="@string/photo_button"

                            android:layout_marginTop="5dp"/>

                        <Button
                            android:id="@+id/photo_4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="#55606060"
                            android:text="@string/photo_button"

                            android:layout_marginTop="5dp"/>

                        <Button
                            android:id="@+id/photo_5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="#55606060"
                            android:text="@string/photo_button"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>








            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
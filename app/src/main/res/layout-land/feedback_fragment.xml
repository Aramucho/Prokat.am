<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp">

    <TextView
        android:id="@+id/feedbacktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback"
        android:textColor="#000000"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/phone_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedbacktitle"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/phone_land_1"
        android:textColor="#000000"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/phone_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedbacktitle"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/phone_text_1"
        android:text="@string/phone_land_2"
        android:textColor="#000000"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/phone_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text_2"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/phone_text_1"
        android:text="@string/phone_land_3"
        android:textColor="#000000"
        android:textSize="21sp" />


    <TextView
        android:id="@+id/email_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text_3"
        android:layout_gravity="center"

        android:paddingRight="5dp"
        android:text="@string/email"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text_3"

        android:layout_gravity="center"
        android:layout_toEndOf="@id/email_land"
        android:text="@string/info_prokat_am"
        android:textColor="@color/maincolorblue"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_land"
        android:layout_gravity="center"
        android:text="@string/adress"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/feedbacktitle"
        android:background="@drawable/edit_text_drawable"
        android:ellipsize="end"
        android:hint="@string/namehint"
        android:lines="1"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#e35c5a5a" />

    <EditText
        android:id="@+id/email_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_feed"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/feedbacktitle"
        android:background="@drawable/edit_text_drawable"
        android:ellipsize="end"
        android:hint="@string/emaihint"
        android:lines="1"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#e35c5a5a" />

    <EditText
        android:id="@+id/phone_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_feed"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/feedbacktitle"
        android:background="@drawable/edit_text_drawable"
        android:ellipsize="end"
        android:hint="@string/phonetint"
        android:inputType="number"
        android:lines="1"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#e35c5a5a" />


    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submitbutton"
        android:layout_below="@id/phone_feed"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_drawable"
        android:gravity="top"
        android:hint="@string/hintmessage"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#e35c5a5a" />

    <Button
        android:id="@+id/submitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/maincolorblue"
        android:text="@string/submit"
        android:textAllCaps="false" />
</RelativeLayout>